{
   "allowJs": true,
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "outDir": "dist/",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "noEmitHelpers": false,
      "alwaysStrict": true,
      "diagnostics": true,
      "strictNullChecks": true,
      "noImplicitAny": false,
      "types": [
         "node"
      ]
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules",
      "src/__tests__/*"
   ]
}